<div class="row">
  <div class="user_show col-md-3 offset-md-4">
    <div class="user_show_info">
      <div>ユーザー名</div>
      <div><%= @user.name %></div>
    </div>
    <div class="user_show_info">
      <div>メールアドレス</div>
      <div><%= @user.email %></div>
    </div>
    <% if logged_in? && (@user==current_user || current_user.admin?) %>
      <%= link_to "プロフィール編集" ,edit_user_path(@user) , class:"btn btn-light rounded-pill"%>
    <% end %>
  </div>
</div>
<div class="contents">
  <div class="user_show_tab">
    <div class="tablist">投稿</div>
  </div>
</div>
<div class="contents">
  <div class="all_posts">
    <%= render "shared/post_list" %>
  </div>
</div>
